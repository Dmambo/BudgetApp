<div class="cat">
<%= link_to image_tag("left-arrow.png"), categories_path %>
<h1 class="cat">TRANSACTIONS</h1>
<%= image_tag("search.png", class: "img") %>
</div>

<div class="total-amount">
  <%= image_tag url_for(@category.icon), alt: @category.name, class: "cat-image" %>
    <div><strong>Total amount:</strong> <%= number_to_currency(@total_amount) %></div>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Categories</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.name %></td>
        <td><%= number_to_currency(expense.amount) %></td>
        <td><%= expense.categories.map(&:name).join(', ') %></td>
        <td><%= expense.created_at.strftime('%d %b %Y') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Transaction', new_category_expense_path(@category), class: 'newCategory' %>

